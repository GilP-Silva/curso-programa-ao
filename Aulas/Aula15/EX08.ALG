algoritmo "Ex08"
var
    A, C, raio : real
inicio
        //pi 3.1415
        //entrada de dados
        escreva("Valor do raio? ")
        leia(raio)
        
        A <- 3.1415 * raio ^ 2
        
        C <- 2 * 3.1415 * raio
        
        //saída de dados
        escreval("Area = ", A)
        escreval("Comprimento = ", C)
fimalgoritmo